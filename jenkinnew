pipeline {
    agent any
    environment {
        name = 'sharanya'
    }
    parameters {
        string(name: 'person', defaultValue: 'sharanya', description: "who are you")
        booleanParam(name: 'isMale', defaultValue: 'true', description: "")
        choice(name: 'city', choices: ['Jaipur','Mumbai','Pune' ], description: "")
    }

    stages {
        stage('Run a command') {
            steps {
                sh '''
                ls
                date
                pwd
                '''
                
            }
             
        }
        stage('Environment variables') {
             environment {
        username = 'sharu'
    }
            steps {
                sh 'echo "${BUILD_ID}"'
                sh 'echo "${name}"'
                sh 'echo "${username}"'
            }
        }
        stage('Build') {
            steps {
                echo 'build'
            }
        }
        stage('parameters') {
            steps {
                echo 'deploy on test'
                sh 'echo "${name}"'
                sh 'echo "${person}"'
            }
        }
        stage('Continue') {
            input {
                message "should we continue"
                ok "yes we should"
            }
            steps {
                echo 'deploy on prod'
            }
        }
        stage('deploy prod') {
            
            steps {
                echo 'deploy on prod'
            }
        }
        
    }
    post {
        always {
            echo 'I will always say hello again'
        }
        failure{
            echo 'FAILURE'
        }
        success{
            echo 'Success'
        }
    }
}
